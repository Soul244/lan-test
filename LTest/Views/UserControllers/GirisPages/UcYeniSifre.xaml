<UserControl x:Class="LTest.Views.UserControllers.GirisPages.UcYeniSifre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LTest.Views.UserControllers.GirisPages"
             mc:Ignorable="d" >
    <StackPanel>
        <TextBlock Style="{StaticResource Header}" Text="Şifremi Unuttum" Padding="5"></TextBlock>
        <Separator Margin="5,10"/>
        <Label Style="{StaticResource Label}" Content="Mail Adresi:" Foreground="Black"/>
        <TextBox Style="{StaticResource TextBox}" Name="MailTextBox" TextChanged="MailText_Changed" Height="Auto" Width="310"/>
        <Button Style="{StaticResource ButtonStyleInfo}" Margin="0,10" HorizontalAlignment="Left">
            <Label Style="{StaticResource ButtonText}" Content="Yeni Şifre Gönder"/>
        </Button>
    </StackPanel>
</UserControl>
